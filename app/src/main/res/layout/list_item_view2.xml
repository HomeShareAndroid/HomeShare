        ></TextView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Utilties:"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="225dp"
        android:ellipsize="end"
        android:fontFamily="@font/lora2"
        android:maxLines="3"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/utilities"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="275dp"
        android:ellipsize="end"
        android:fontFamily="@font/lora2"
        android:maxLines="3"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Bedspace:"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="225dp"
        android:ellipsize="end"
        android:fontFamily="@font/lora2"
        android:maxLines="3"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        />
    <TextView
        android:id="@+id/numBeds"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="290dp"
        android:ellipsize="end"
        android:fontFamily="@font/lora2"
        android:maxLines="3"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#FFFF"
        android:layout_marginTop="0dp"
        ></TextView>
    <TextView
        android:layout_width="4dp"
        android:layout_height="1000dp"
        android:background="#FFFF"
        android:layout_marginTop="0dp"
        ></TextView>
    <TextView
        android:layout_width="7dp"
        android:layout_height="1000dp"
        android:background="#FFFF"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="369dp"
        ></TextView>
    <ImageButton
        android:id="@+id/acceptInvitation2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="302dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/grex"
        android:clickable="true"
        android:ellipsize="end"
        android:fontFamily="@font/lora2"
        android:textColor="#FFFFFF"

        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/rejectInvitation2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/greydecline"
        android:clickable="true"
        android:ellipsize="end"
        android:fontFamily="@font/lora2"
        android:textColor="#FFFFFF"

        android:textSize="14sp" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:text="Personality: "
        android:ellipsize="end"
        android:fontFamily="@font/lora2"
        android:maxLines="3"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        />
    <TextView
